<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sayuran Rfresh"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/welcome"
        android:layout_above="@+id/nav"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/s1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/s1"/>

            <TextView
                android:id="@+id/nama1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Kentang"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/s2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/s2"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/nama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Kol"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/s3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/s3"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/nama3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Jagung"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/s4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/s4"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/nama4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tomat"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/s5"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/s5"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/nama5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Wortel"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/s6"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/s6"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/nama6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Timun"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/nav">

        <Button
            android:id="@+id/bthome"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_home_24"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btlist"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_format_list_bulleted_24"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btlocation"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_location_on_24"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btlogout"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_logout_24"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>